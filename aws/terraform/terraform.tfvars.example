# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Project Configuration
project_name = "ezspeech"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# ECS Task Configuration
task_cpu    = "2048"  # 2 vCPU
task_memory = "4096"  # 4 GB

# For GPU instances, use larger values:
# task_cpu    = "4096"  # 4 vCPU
# task_memory = "8192"  # 8 GB

# Auto-scaling Configuration
desired_count = 2
min_capacity  = 1
max_capacity  = 10

# Auto-scaling thresholds (percentage)
cpu_target_value    = 70
memory_target_value = 70

# Logging
log_retention_days = 7  # Increase for production (e.g., 30, 90)

# SSL Certificate (optional - get ARN from ACM)
# acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxx"

# Model Configuration
model_s3_key = "models/model.ckpt"
config_name  = "ctc_sc"

# Additional Tags
tags = {
  Owner       = "YourName"
  Team        = "ML"
  CostCenter  = "Engineering"
}
